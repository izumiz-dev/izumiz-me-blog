---
import { Icon } from 'astro-icon';
---

<button class="search-button open-search-modal" type="button"
  ><Icon name="octicon:search-24" /><span>Search</span></button
>

<style>
  .search-button {
    display: flex;
    width: 100%;
    margin-bottom: 0.5rem;
    border: none;
    border-radius: var(--radius);
    padding: 0.4rem 0.4rem;
    color: var(--fg-muted);
    font-size: 0.95rem;
    font-weight: bold;
    background-color: transparent;
    border: 1px solid var(--border-muted);
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
  }
  .search-button:hover {
    cursor: pointer;
    background-color: var(--my-hover-color);
    color: var(--my-fg-color);
  }
  .search-button svg {
    width: 20px;
    height: 20px;
    margin-right: 0.2rem;
  }
  [astro-icon='octicon:search-24'] {
    color: var(--fg);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    function handleKeydown(event) {
      if (event.keyCode === 75 && event.metaKey) {
        // Ctrl+K or Cmd+K
        document.querySelector('.open-search-modal').click();
      }
    }

    document.addEventListener('keydown', handleKeydown);
  });
</script>
